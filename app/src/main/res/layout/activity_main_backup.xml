<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center" >
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="차량정보입력" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="메인이야" />
        
        <TextView
           android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="블랙박스" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_car_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="자동차 이름" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.75"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/main_btn_layout_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/main_btn_auto_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 자동진단" />

            <Button
                android:id="@+id/main_btn_consumable_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소모품관리" />

            <Button
                android:id="@+id/main_btn_drive_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주행스타일" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_btn_layout_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/main_btn_drive_monitoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주행 모니터링" />

            <Button
                android:id="@+id/main_btn_paking_gps_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주차위치 찾기" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>