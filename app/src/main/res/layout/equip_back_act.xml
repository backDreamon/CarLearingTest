<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/equip_box_act" >
    
    <Button
        android:id="@+id/equip_btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_reset"
        android:layout_marginLeft="39.5dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="6dp" />
    
    <Button
        android:id="@+id/equip_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back"
        android:layout_toRightOf="@id/equip_btn_reset"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="6dp" />

</RelativeLayout>
